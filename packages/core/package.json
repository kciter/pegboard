{
  "name": "@pegboard/core",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Sunhyoup Lee <kciter@naver.com>",
  "source": "./src/index.ts",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      },
      "./styles": {
        "import": "./src/styles/index.css",
        "require": "./src/styles/index.css"
      }
    }
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "eslint --max-warnings 0 src",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "build": "internal-build"
  },
  "devDependencies": {
    "@pegboard/builder": "workspace:*",
    "@pegboard/eslint-config": "workspace:*",
    "@pegboard/typescript-config": "workspace:*",
    "eslint": "^9.18.0",
    "typescript": "^5.8.3"
  },
  "homepage": "https://github.com/kciter/pegboard",
  "bugs": {
    "url": "https://github.com/kciter/pegboard/issues",
    "email": "kciter@naver.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kciter/pegboard.git"
  }
}
