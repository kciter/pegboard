{
  "private": true,
  "name": "pegboard",
  "description": "Grid-based WYSIWYG editor",
  "keywords": [
    "pegboard",
    "editor",
    "wysiwyg",
    "grid"
  ],
  "author": "Sunhyoup Lee <kciter@naver.com>",
  "license": "MIT",
  "scripts": {
    "lint": "pnpm -r run lint",
    "build": "pnpm -r --parallel --filter \"./packages/**/*\" run build",
    "build:storybook": "pnpm -F storybook build",
    "clean": "pnpm -r run clean",
    "dev:storybook": "pnpm -F storybook dev",
    "format": "prettier --write .",
    "chromatic": "npx chromatic -t=chpt_d02501271d98b50 -b=build:storybook"
  },
  "devDependencies": {
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "rimraf": "^6.0.1"
  },
  "packageManager": "pnpm@10.10.0"
}
